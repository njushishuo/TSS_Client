<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main_student"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="software.nju.tssclient.view.activity.teacher.TeacherMainActivity">

    <FrameLayout
        android:id="@+id/tea_fragment_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above = "@+id/tea_navigation"
        android:animateLayoutChanges="true">

    </FrameLayout>

    <android.support.design.widget.BottomNavigationView
        android:id="@+id/tea_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"

        android:background="?android:attr/windowBackground"
        app:menu="@menu/navigation" />



</RelativeLayout>
